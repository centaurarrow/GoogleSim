<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
 
<struts>
    <constant name="struts.enable.DynamicMethodInvocation"
        value="false" />
    <constant name="struts.devMode" value="false" />
    <constant name="struts.custom.i18n.resources"
        value="ApplicationResources" />
 
    <package name="default" extends="struts-default,json-default" namespace="/">
    
        <action name="registerAction"
            class="com.raghu.googsim.action.RegisterAction">
            <result name="success">/home.jsp</result>
            <result name="error">/registerUser.jsp</result>
        </action>
        
        <action name="loginAction"
            class="com.raghu.googsim.action.LoginAction">
            <result name="success">/home.jsp</result>
            <result name="error">/login.jsp</result>
            <result name="input">/login.jsp</result>
        </action>
        <action name="logoutAction"
            class="com.raghu.googsim.action.LoginAction" method="logout" >
            <result name="success">/login.jsp</result>
            <result name="error">/login.jsp</result>
            <result name="input">/login.jsp</result>
        </action>
       
       <action name="allTaxisAction" 
            class="com.raghu.googsim.action.TaxiListAction" method="AllTaxis" >
            <result name="success">taxi/taxis.jsp</result>
            <result name="error">/home.jsp</result>
        </action>

       <action name="allTaxisAction1" 
            class="com.raghu.googsim.action.TaxiListAction" method="AllTaxis" >
            <result type="json"/>
        </action>
        
        <action name="getTaxisAtGivenTime" 
            class="com.raghu.googsim.action.TaxiAction" method="TaxisAtGivenTime" >
            <result type="json">taxi/gettaxis.jsp</result>
            <result name="error">/home.jsp</result>
        </action>
        

       <action name="AllLocationsForTaxiAction" 
            class="com.raghu.googsim.action.TaxiAction" >
            <result name="success">taxi/routes.jsp</result>
            <result name="error">/home.jsp</result>
        </action>

       <action name="AllLocationsForRouteActionJson" 
            class="com.raghu.googsim.action.RouteAction" >
            <result type="json">taxi/routelocation.jsp</result>
            <result name="error">/home.jsp</result>
        </action>

       <action name="AllLocationsForAllRouteActionJson" 
            class="com.raghu.googsim.action.TaxiAction" method="AllLocationsForAllRoutes">
            <result type="json">taxi/routescloud.jsp</result>
            <result name="error">/home.jsp</result>
        </action> 

		<action name="SimilarRoutesForRouteID" 
            class="com.raghu.googsim.action.TaxiAction" method="SimilarRoutesForRouteID">
            <result type="json">taxi/routessimilar.jsp</result>
            <result name="error">/home.jsp</result>
        </action>
        
        <action name="SimilarRoutesForCurrentRoute" 
            class="com.raghu.googsim.action.TaxiAction" method="SimilarRoutesForCurrentRoute">
            <result type="json">taxi/routespredict.jsp</result>
            <result name="error">/home.jsp</result>
        </action> 
        
        <action name="startAndEndLocationsofRoutesForAUser" 
            class="com.raghu.googsim.action.TaxiAction" method="startAndEndLocationsofRoutesForAUser">
            <result type="json">taxi/routespredict.jsp</result>
        </action>

       <action name="routes" >
            <result>taxi/routes.jsp</result>
        </action>

       <action name="routelocation" >
            <result>taxi/routelocation.jsp</result>
        </action>
	
	   <action name="gettaxis" >
            <result>taxi/gettaxis.jsp</result>
        </action>

	   <action name="routescloud" >
            <result>taxi/routescloud.jsp</result>
       </action> 
       
       <action name="routessimilar" >
            <result>taxi/routessimilar.jsp</result>
        </action>
       
       <action name="routespredict" >
            <result>taxi/routespredict.jsp</result>
        </action>


    </package>
    
    
</struts>